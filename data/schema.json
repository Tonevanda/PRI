{
    "add-field-type": [
        {
            "name": "text",
            "class": "solr.TextField",
            "positionIncrementGap": "100",
            "analyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    {
                        "class": "solr.ASCIIFoldingFilterFactory",
                        "preserveOriginal": true
                    },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    },
                    {
                        "class": "solr.SynonymGraphFilterFactory",
                        "synonyms": "synonyms.txt",
                        "ignoreCase": true,
                        "tokenizerFactory": "solr.StandardTokenizerFactory"
                    },
                    {
                        "class": "solr.FlattenGraphFilterFactory"
                    },
                    {
                        "class": "solr.StopFilterFactory",
                        "words": "lang/stopwords_en.txt",
                        "ignoreCase": true
                    },
                    {
                        "class": "solr.PorterStemFilterFactory"
                    }
                ]
            }
        },
        {
            "name": "number",
            "class": "solr.IntPointField",
            "docValues": true
        },
        {
            "name": "float_number",
            "class": "solr.FloatPointField",
            "docValues": true
        },
        {
            "name": "date",
            "class": "solr.DatePointField",
            "docValues": true
        }
    ],
    "add-field": [
        {
            "name": "Title",
            "type": "text",
            "indexed": true,
            "stored": true
        },
        {
            "name": "Summary",
            "type": "text",
            "indexed": true,
            "stored": true
        },
        {
            "name": "Arc",
            "type": "text",
            "indexed": true,
            "stored": true
        },
        {
            "name": "Saga",
            "type": "text",
            "indexed": true,
            "stored": true
        },
        {
            "name": "Opening",
            "type": "small_text",
            "indexed": true,
            "stored": true
        },
        {
            "name": "Ending",
            "type": "small_text",
            "indexed": true,
            "stored": true
        },
        {
            "name": "Episode",
            "type": "number",
            "indexed": true,
            "stored": true
        },
        {
            "name": "Season",
            "type": "float_number",
            "indexed": true,
            "stored": true
        },
        {
            "name": "airdate",
            "type": "date",
            "indexed": true,
            "stored": true
        },
        {
            "name": "episode_script",
            "type": "text",
            "indexed": true,
            "stored": true
        }
    ]
}