{
	"add-field-type": [
        {
            "name":"text",
            "class":"solr.TextField",
            "positionIncrementGap":"100",
            "analyzer": {
                "tokenizer": {
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters": [
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    },
                    {
                        "class": "solr.StopFilterFactory",
                        "words": "stopwords.txt",
                        "ignoreCase": true
                    },
                    {
                        "class": "solr.PorterStemFilterFactory"
                    },
                    {
                        "class": "solr.PhoneticFilterFactory",
                        "encoder": "DoubleMetaphone",
                        "inject": false
                    }
                ]
            }
        },
        {
            "name":"small_text",
            "class":"solr.StrField",
            "sortMissingLast":true,
            "docValues": true
        },
        {
            "name":"number",
            "class":"solr.FloatPointField",
            "docValues": true
        },
        {
            "name":"date",
            "class":"solr.DatePointField",
            "docValues": true
        }
    ],
    "add-field": [
        {
            "name": "Title",
            "type": "text",
            "indexed": true,
            "stored": true
        },
        {
            "name": "Summary",
            "type": "text",
            "indexed": true,
            "stored": true
        },
        {
          "name": "Arc",
          "type": "small_text",
          "indexed": true,
          "stored": true,
          "docValues": true
        },
        {
          "name": "Saga",
          "type": "small_text",
          "indexed": true,
          "stored": true,  
          "docValues": true
        },
        {
          "name": "Opening",
          "type": "small_text",
          "indexed": true,
          "stored": true,
          "docValues": true
        },
        {
          "name": "Ending",
          "type": "small_text",
          "indexed": true,
          "stored": true,
          "docValues": true
        },
        {
          "name": "Full_Text",
          "type": "text",
          "indexed": true,
          "stored": false,
          "multiValued": true
        },
        {
            "name": "Episode",
            "type": "number",
            "indexed": true,
            "stored": true
        },
        {
            "name": "Season",
            "type": "number",
            "indexed": true,
            "stored": true
        },
        {
            "name": "airdate",
            "type": "date",
            "indexed": true,
            "stored": true
        }
    ],
    "add-copy-field": [
        { "source": "Title", "dest": "Full_Text" },
        { "source": "Summary", "dest": "Full_Text" },
        { "source": "Arc", "dest": "Full_Text" },
        { "source": "Saga", "dest": "Full_Text" }
    ]
}
